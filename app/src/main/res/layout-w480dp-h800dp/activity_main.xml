<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/appTitle6"
        android:layout_width="wrap_content"
        android:layout_height="172dp"
        android:contentDescription="App title"
        android:fontFamily="sans-serif-black"
        android:paddingHorizontal="70dp"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textColor="@color/color_main_alternative"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.386"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.081" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="486dp"
        android:layout_height="190dp"
        android:layout_marginTop="40dp"
        android:paddingHorizontal="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appTitle6">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="92dp">

            <TextView
                android:id="@+id/peopleLabel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:fontFamily="sans-serif-black"
                android:text="🙋‍♂️"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="60sp" />

            <EditText
                android:id="@+id/peopleValue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:hint="@string/hintPeople"
                android:inputType="number"

                android:textColor="@color/color_main_alternative"
                android:textSize="34sp" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="97dp">

            <TextView
                android:id="@+id/moneyLabel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:fontFamily="sans-serif-black"
                android:text="💵"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="60sp" />

            <EditText
                android:id="@+id/moneyValue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:hint="@string/hintMoney"
                android:inputType="number|numberDecimal"
                android:textColor="@color/color_main_alternative"
                android:textSize="34sp" />
        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/splitValue6"
        android:layout_width="243dp"
        android:layout_height="234dp"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="84dp"
        android:fontFamily="sans-serif-medium"
        android:text="R$ 0,00"
        android:textAlignment="center"
        android:textColor="@color/color_main_alternative"
        android:textSize="96sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout"
        app:layout_constraintVertical_bias="1.0" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/shareButton4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_weight="1"
        android:accessibilityHeading="false"
        android:clickable="true"
        android:contentDescription="Share Button"
        android:cropToPadding="false"
        android:foregroundGravity="center"
        android:foregroundTint="#000000"
        android:tint="#000000"
        android:visibility="visible"
        app:backgroundTint="#2A82AD"
        app:fabCustomSize="80dp"
        app:fabSize="auto"

        app:layout_constraintBottom_toBottomOf="@+id/splitValue6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/splitValue6"
        app:layout_constraintTop_toBottomOf="@+id/voiceButton4"
        app:maxImageSize="50dp"
        app:srcCompat="@android:drawable/ic_menu_share"
        app:useCompatPadding="false" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/voiceButton4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="24dp"
        android:layout_weight="1"
        android:clickable="true"
        android:contentDescription="Text to Speak Button"
        android:visibility="visible"
        app:backgroundTint="#2A82AD"
        app:fabCustomSize="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toEndOf="@+id/splitValue6"
        app:layout_constraintTop_toTopOf="@+id/splitValue6"
        app:maxImageSize="50dp"
        app:rippleColor="#000000"
        app:srcCompat="@android:drawable/ic_lock_silent_mode_off" />
</androidx.constraintlayout.widget.ConstraintLayout>